<%= form_with scope: :article, url: article_update_path, method: :put, locale: true do |a| %>
  <div>
    <% if @article.errors.any? %>
      <ul>
        <% @article.errors.full_messages.each do |err| %>
          <li><%= err %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div>
    <%= a.label :name %>
    <%= a.text_field :name %>
  </div>
  
  <div>
    <%= a.label :body %>
    <%= a.text_field :body %>
  </div>
  
  <div>
    <%= a.submit %>
  </div>
<% end %>
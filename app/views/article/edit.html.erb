<%= form_with scope: :article, url: article_update_path, method: :put, locale: true do |a| %>
  <div class="edit-article">
    <% if @article.errors.any? %>
      <ul>
        <% @article.errors.full_messages.each do |err| %>
          <li><%= err %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="edit-container">
    <h1>Edit Article</h1>  
    <div class="label-container">
      <%= a.label :name %>
      <%= a.text_field :name %>
    </div>
    
    <div class="label-container">
      <%= a.label :body %>
      <%= a.text_area :body %>
    </div>
    
    <div class="btn-container">
      <%= a.submit %>
      <%= link_to "Back", articles_path%>
    </div>
  </div>
<% end %>